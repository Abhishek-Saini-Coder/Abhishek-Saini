{% comment %}
  Custom Banner Section
  Features:
  - Editable brand name, main heading, and tagline
  - Animated "Shop Now" button with hover effects
  - Fully responsive design
  - No Dawn theme components used
{% endcomment %}

<div class="custom-banner-section" id="banner-{{ section.id }}">
  <div class="banner-container">
    <div class="banner-content">
      {% if section.settings.brand_name != blank %}
        <div class="banner-brand">{{ section.settings.brand_name }}</div>
      {% endif %}

      {% if section.settings.main_heading != blank %}
        <h1 class="banner-heading">{{ section.settings.main_heading }}</h1>
      {% endif %}

      {% if section.settings.tagline != blank %}
        <p class="banner-tagline">{{ section.settings.tagline }}</p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <div class="banner-button-wrapper">
          <a href="{{ section.settings.button_link }}" class="banner-button">
            {{ section.settings.button_text }}
            <span class="button-arrow">â†’</span>
          </a>
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_decorative_elements %}
      <div class="banner-decorative">
        <div class="deco-circle deco-circle-1"></div>
        <div class="deco-circle deco-circle-2"></div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  /* Banner Section Styles */
  .custom-banner-section {
    width: 100%;
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    position: relative;
    overflow: hidden;
  }

  .banner-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .banner-content {
    text-align: {{ section.settings.text_alignment }};
    max-width: 800px;
    {% if section.settings.text_alignment == 'center' %}
      margin: 0 auto;
    {% endif %}
  }

  .banner-brand {
    font-size: {{ section.settings.brand_font_size }}px;
    color: {{ section.settings.brand_color }};
    font-weight: 700;
    letter-spacing: 2px;
    margin-bottom: 20px;
    text-transform: uppercase;
    animation: fadeInDown 0.8s ease-out;
  }

  .banner-heading {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    font-weight: 800;
    line-height: 1.2;
    margin: 0 0 24px;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  .banner-tagline {
    font-size: {{ section.settings.tagline_font_size }}px;
    color: {{ section.settings.tagline_color }};
    line-height: 1.6;
    margin: 0 0 40px;
    animation: fadeIn 0.8s ease-out 0.4s backwards;
  }

  .banner-button-wrapper {
    animation: fadeInUp 0.8s ease-out 0.6s backwards;
  }

  .banner-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 18px 40px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 2px solid {{ section.settings.button_background }};
  }

  .banner-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .banner-button:hover::before {
    left: 100%;
  }

  .banner-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    background: {{ section.settings.button_hover_background }};
    border-color: {{ section.settings.button_hover_background }};
  }

  .button-arrow {
    display: inline-block;
    transition: transform 0.3s ease;
    font-size: 20px;
  }

  .banner-button:hover .button-arrow {
    transform: translateX(5px);
    animation: arrowBounce 0.6s ease infinite;
  }

  /* Decorative Elements */
  .banner-decorative {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .deco-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent);
  }

  .deco-circle-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    right: -50px;
    animation: float 6s ease-in-out infinite;
  }

  .deco-circle-2 {
    width: 200px;
    height: 200px;
    bottom: -50px;
    left: -30px;
    animation: float 8s ease-in-out infinite reverse;
  }

  /* Animations */
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes arrowBounce {
    0%, 100% {
      transform: translateX(5px);
    }
    50% {
      transform: translateX(10px);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .custom-banner-section {
      padding: {{ section.settings.section_padding_top | divided_by: 1.5 }}px 0 {{ section.settings.section_padding_bottom | divided_by: 1.5 }}px;
    }

    .banner-brand {
      font-size: {{ section.settings.brand_font_size | times: 0.8 }}px;
    }

    .banner-heading {
      font-size: {{ section.settings.heading_font_size | times: 0.6 }}px;
    }

    .banner-tagline {
      font-size: {{ section.settings.tagline_font_size | times: 0.9 }}px;
    }

    .banner-button {
      padding: 14px 30px;
      font-size: 14px;
    }

    .banner-content {
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .banner-heading {
      font-size: {{ section.settings.heading_font_size | times: 0.5 }}px;
    }

    .banner-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Follow the tips, follow the tips, follow the tips for happiness. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 100
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "brand_color",
      "label": "Brand Name Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "tagline_color",
      "label": "Tagline Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_hover_background",
      "label": "Button Hover Background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Typography Settings"
    },
    {
      "type": "range",
      "id": "brand_font_size",
      "label": "Brand Font Size",
      "min": 10,
      "max": 30,
      "step": 1,
      "default": 14
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size",
      "min": 20,
      "max": 100,
      "step": 2,
      "default": 60
    },
    {
      "type": "range",
      "id": "tagline_font_size",
      "label": "Tagline Font Size",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 18
    },
    {
      "type": "header",
      "content": "Decorative Elements"
    },
    {
      "type": "checkbox",
      "id": "show_decorative_elements",
      "label": "Show Decorative Circles",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
